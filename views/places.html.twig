<html>
<head>
    <title>Places Visited</title>
</head>
<body>
    <h1>List of Places</h1>

    {% if places is not empty %}
        <p>Here's where you've been!:</p>
        <ul>
           {% for place in places %}
               <li>{{ place.getCity }}</li>
           {% endfor %}
        </ul>
    {% endif %}

    <form action='/places' method='post'>
        <label for='city_name'>Place you've been</label>
        <input id='city_name' name='city_name' type='text'>

        <button type='submit'>Add place</button>
    </form>

    <form action='/delete_place' method='post'>
        <button type='submit'>Clear</button>
    </form>
</body>
</html>
